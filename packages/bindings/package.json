{
  "name": "@serialport/bindings",
  "version": "9.2.4",
  "main": "lib",
  "keywords": [
    "serialport-binding"
  ],
  "dependencies": {
    "@serialport/binding-abstract": "9.2.3",
    "@serialport/parser-readline": "9.2.4",
    "bindings": "^1.5.0",
    "debug": "^4.3.2",
    "node-addon-api": "4.2.0",
    "node-gyp-build": "^4.3.0"
  },
  "devDependencies": {
    "@serialport/binding-mock": "9.2.4",
    "node-abi": "^3.2.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "install": "node-gyp-build",
    "lint": "cc --verbose",
    "prebuild": "prebuildify --napi --strip --verbose --tag-prefix @serialport/bindings@",
    "rebuild": "node-gyp build"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/serialport/node-serialport.git"
  },
  "gypfile": true,
  "cc": {
    "filter": [
      "legal/copyright",
      "build/include"
    ],
    "files": [
      "src/*.cpp",
      "src/*.h"
    ],
    "linelength": "120"
  },
  "funding": "https://opencollective.com/serialport/donate",
  "binary": {
    "napi_versions": [
      4
    ]
  }
}
